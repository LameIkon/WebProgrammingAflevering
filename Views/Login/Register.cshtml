@model WebProgrammingAflevering.Models.ViewModels.AddUserViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(ViewBag.Message != null)
            {
                <div class="form-group">@ViewBag.Message</div>
            }
            <div class="form-group">
                <label for="email" asp-for="Email" class="control-label"></label>
                <input id="email" name="email" asp-for="Email" class="form-control" />
                <span id="email-error-message" for="email" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="username" asp-for="Username" class="control-label"></label>
                <input id="username" asp-for="Username" class="form-control" />
                <span id="username-error-message" for="username" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="password" asp-for="Password" class="control-label"></label>
                <input id="password" asp-for="Password" class="form-control" />
                <span id="password-error-message" for="password" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="repeat-password" asp-for="RepeatPassword" class="control-label"></label>
                <input id="repeat-password" asp-for="RepeatPassword" class="form-control" />
                <span id="repeat-password-error-message" for="repeat-password" class="error-message"></span>
            </div>
            <div class="form-group">
                <input id="register" type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    Already have an account? <a asp-action="Index">Back to login</a>
</div>

@section Scripts {
    <script src="/js/RegEx.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
